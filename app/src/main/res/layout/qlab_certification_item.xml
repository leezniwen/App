<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@color/ash"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/cert_list_ll"
        >

        <TextView
            android:id="@+id/cert_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bookmark"
            android:padding="25dp"
            android:text="類別"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/cert_img"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cert_logo"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cert_mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/ic_adjust"
                android:gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/cert_expense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/cert_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>